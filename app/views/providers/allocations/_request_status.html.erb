<table class="govuk-table govuk-!-margin-bottom-8 ">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header">
        Organisation
      </th>
      <th class="govuk-table__header">
        Status
      </th>
      <th class="govuk-table__header"></th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @allocations.each do |allocation| %>
      <tr class="govuk-table__row">
        <th class="govuk-table__header" data-qa="provider_name">
          <%= allocation[:provider_name] %>
        </th>
        <td class="govuk-table__cell">
          <span class="govuk-tag govuk-tag--<%= allocation[:status_colour] %>">
            <%= allocation[:status] %>
          </span>
        </td>
        <td class="govuk-table__cell">
          <a class="govuk-link" href="<%= request.url + allocation[:action_path] %>"><%= allocation[:action] %></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
